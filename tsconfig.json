{
  "compilerOptions": {
    "module": "ESNext",
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client", "node"]
  },
  "exclude": [
    "dist",
    "setup.ts",
    "examples",
    "node_modules",
    "/**/*.test.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
